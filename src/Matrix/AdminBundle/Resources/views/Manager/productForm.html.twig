{% extends "MatrixAdminBundle::base.html.twig" %}
{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <form action="{{ path('product_create') }}" method="post">
        <input type="text" name="product-name" required="true" placeholder="Name" />
        <input type="number" min="0" name="product-quantity" required="true" placeholder="Quantity" />
        <input type="text" name="product-description" required="true" placeholder="Description" />
        <input type="text" name="product-code" required="true" placeholder="Code" />
        <input type="number" min="0" max="100" name="product-vat" required="true" placeholder="Vat" />
        <label for="unit-select">Unit</label>
        <select id="unit-select" name="product-unit" required="required">
            {% for unit in units %}
                <option value="{{ unit.id }}">{{ unit.name }}</option>
            {% endfor %}
        </select>
        <input type="submit" value="Create" />
    </form>
{% endblock %}