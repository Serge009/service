{% extends "MatrixAdminBundle::base.html.twig" %}
{% block content %}
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        {% for users in users %}
            <tr onclick='window.location.href = "{{ path("mobile_user_update") ~ "/" ~ users.id }}"'>
                <td>{{ users.name }}</td>
                <td>{{ users.surname }}</td>
                <td>{{ users.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}